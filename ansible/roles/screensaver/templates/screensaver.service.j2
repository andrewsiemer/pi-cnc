[Unit]
Description=Pi-CNC Screensaver Watcher
After=graphical.target
Wants=graphical.target

[Service]
Type=simple
User={{ pi_user }}
Group={{ pi_user }}
# Environment variables are set in the script itself
# Give X11/desktop time to fully initialize before starting
ExecStartPre=/bin/sleep 30
ExecStart={{ pi_home }}/screensaver-watcher.sh
Restart=always
RestartSec=10

[Install]
WantedBy=graphical.target

